<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/td"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tejal.vote.MainActivity4Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kindly fill following details:"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textColor="#ff240bff"
        android:textColorHighlight="#fffffb33"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
         android:textSize="16sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:gravity="center"
        android:textSize="16sp"
        android:id="@+id/name"
        android:outlineProvider="bounds"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_above="@+id/carno"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Number:"
        android:layout_below="@id/textView6"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:id="@+id/txt"
        />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/carno"
        android:hint="MH05BM1234"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/txt"
        android:layout_alignTop="@+id/txt"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licence Number:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:id="@+id/licence"
        android:layout_below="@+id/carno"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/licenceno"
        android:hint="MH-13digit number"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/licence"
        android:layout_alignTop="@+id/licence"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No:"
        android:id="@+id/textcon"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@+id/licenceno"
        android:layout_alignEnd="@+id/txt" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
       android:inputType="number"
        android:gravity="center"
        android:layout_alignBaseline="@+id/textcon"
        android:textSize="16sp"
        android:id="@+id/conno"
        android:hint="10 digit number"
        android:layout_alignEnd="@+id/carno" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:layout_below="@id/textcon"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView9"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textcon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button"
        android:layout_marginTop="20sp"
        android:onClick="OnButtonClick"
        android:layout_below="@+id/confirm"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:id="@+id/password"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/confirm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Confirm Password"
        android:id="@+id/textView4"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:textSize="16sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:id="@+id/confirm"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

</RelativeLayout>
